<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:padding="@dimen/padding_activity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to Chaito"
        android:textSize="@dimen/title_text_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/llLogin"
        android:layout_marginBottom="@dimen/margin_login"/>

    <LinearLayout
        android:id="@+id/llLogin"
        android:layout_marginStart="@dimen/margin_login"
        android:layout_marginEnd="@dimen/margin_login"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="vertical">
        <EditText
            android:id="@+id/etxtUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:hint="Username"/>
        <EditText
            android:id="@+id/etxtHost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Hostname"
            android:inputType="text"
            android:layout_marginTop="@dimen/margin_login_field"/>
        <EditText
            android:id="@+id/etxtPort"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_login_field"
            android:inputType="number"
            android:hint="Port"/>
    </LinearLayout>

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Login"
        app:layout_constraintTop_toBottomOf="@id/llLogin"
        app:layout_constraintStart_toStartOf="@id/llLogin"
        app:layout_constraintEnd_toEndOf="@id/llLogin"
        android:layout_marginTop="@dimen/margin_login"
        android:padding="@dimen/btn_login_padding"/>

</androidx.constraintlayout.widget.ConstraintLayout>